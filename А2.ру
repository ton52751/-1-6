№1
x = 1  # Замените значение x на то, которое вы хотите проверить

if -21 <= x < -3:
    print("Точка x принадлежит интервалу [-21;-3)")
else:
    print("Точка x не принадлежит интервалу [-21;-3)")


№2
x = -5  # Замените значение x на то, которое вы хотите проверить

if (-1 <= x <= 1) or (2 < x <= 10):
    print(f"Точка x = {x} принадлежит интервалу [-1;1]U(2;10]")
else:
    print(f"Точка x = {x} не принадлежит интервалу [-1;1]U(2;10]")
